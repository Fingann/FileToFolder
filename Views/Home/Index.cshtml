@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   @model FileModel
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFiles">
        <div class="form-group">
            <div class="col-md-10">
                <p>Title of the Folder:</p>
                <input asp-for="FolderName" type="text" name="FolderName" />
            </div>
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input asp-for="Files" type="file" name="files" multiple/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>
